<div class="btn-container">
{{#if loggedIn}}
{{#if notOwner}}
  {{#if notLiked}}
<form action="/like/{{truck._id}}" method="post">
  <button type="submit" class="like-btn"><img id="like" src="/images/iconfinder_General_Office_54_3592843.png" alt="heart"></button>
  </form>
{{else}}
<form action="/like/{{truck._id}}" method="post">
  <button type="submit" class="like-btn"><img id="like" src="/images/iconfinder_heart_299063.png" alt="heart"></button>
  </form>
{{/if}}
{{/if}}
{{/if}}
</div>


<div class="truck-container">

<h1 class="trucks-h1">{{truck.name}}</h1>

<div class="truck-detail">

<img class="img-food" src="{{truck.image}}" alt="truck-image">
<div class="info">
<p>{{truck.cuisine}} Food</p>
<p>{{truck.description}}</p>
<p>{{truck.menu}}</p>
<p>Hours: {{truck.hours}}</p>
</div>

<div class="buttons">
{{#if loggedIn}}
{{#if userIsOwner}}
<a href="/{{truck._id}}/truck/edit"><button class="edit-truck">Edit this Truck</button></a>
<a href="/{{truck._id}}/truck/delete"><button class="edit-truck">Delete this Truck</button></a>

{{/if}}
{{/if}}
</div>
</div>
</div>