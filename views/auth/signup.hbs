<div class="login-signup-container">
<h1 class="login-signup">Sign Up</h1>

<form action="/auth/signup" method="POST" id="form-container">

<div class="label">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="">
</div>
  <br><br>

<div class="label">
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="">
  <br><br>
  </div>

<div class="label-truck">
  <label for="truck">I have a truck</label>
    <input type="checkbox" name="truck" value="true" id="truck">
  </div>
  <br>

  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button class="login-signin-button">Create an account</button>

</form>
</div>